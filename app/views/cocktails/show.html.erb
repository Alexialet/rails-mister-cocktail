
<h2><%= @cocktail.name %> </h2>

<% if @cocktail.doses  %>
<h3>Ingredients</h3>
<% doses = @cocktail.doses  %>
<ul>
  <% doses.each do |dose|  %>
  <li>
    <%= dose.description  %>
    <%= dose.ingredient.name  %> <br>
    <%= link_to 'remove', dose_path(@cocktail, dose),
    method: :delete, data: {confirm: "Are your sure?"} %> <br>
  </li>
  <% end  %>
</ul>
<% end  %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to list", cocktails_path %>


