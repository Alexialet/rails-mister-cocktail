<% if cocktail.photo.present? %>
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.4) 50%), url('<%= cl_image_path(cocktail.photo) %>')">
<% else %>
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.4) 50%), url('<%= cl_image_path('mojito-500_cypmat') %>')">
<% end %>
  <div class="card-category">
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
  </div>
  <div class="card-description">
    <% cocktail.doses.each do |dose| %>
    <%= dose.description %> of <%= dose.ingredient.name %> <br>
    <% end %>
  </div>
</div>

